{% extends 'layout.twig' %}

{% block titre %}
    Liste des militaires
{% endblock %}

{% block contenu %}
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">

        <button type="button" class="btn btn-default add-filter">Ajouter un filtre</button>

        <form action="" class="form-inline form-filter" method="post">
            <div class="form-group">
                Afficher les militaires qui
            </div>
            <div class="form-group">
                <select name="filter-group" id="filter-group" class="form-control filter-1">
                    <option selected="selected" value="retire">partiront à la retraite</option>
                    <option value="promotion">pourront être promu</option>
                </select>
            </div>
            <div class="filter-retire filter">
                <div class="form-group">
                    dans
                </div>
                <div class="form-group">
                    <select name="period" id="period" class="form-control filter-2">
                        <option value="2">2 mois</option>
                        <option value="4">4 mois</option>
                        <option value="6">6 mois</option>
                        <option value="8">8 mois</option>
                        <option value="10">10 mois</option>
                        <option value="12" selected="selected">1 an</option>
                    </select>
                </div>
            </div>
            <div class="form-group filter-promotion filter hide">
                <select name="grade" id="filter-priority" class="form-control filter-2">
                    {% if grades %}
                        {% for grade in grades %}
                            <option value="{{ grade.label }}">{{ grade.label }}</option>
                        {% endfor %}
                    {% endif %}
                </select>
            </div>

            <button type="button" class="btn btn-default btn-filter-action">Filtrer</button>
        </form>

        <div class="panel panel-default" style="margin-top:35px;">
            <div class="panel-heading">
                <h3 class="panel-title">Liste des militaires</h3>
            </div>
            <div class="panel-body">
                {% if soldiers is empty %}
                    <p>Aucun soldat.</p>
                {% else %}
                    <ul class="list-group  soldiersList" id="task-list">
                        {% for soldier in soldiers %}
                            <li class="list-group-item priority-0" data-id="{{ soldier.id }}">
                                <a href="index.php?object=soldier&amp;action=displayDetails&amp;idSoldier={{ soldier.id }}">
                                    {{ soldier.name }} {{ soldier.surname }}
                                </a>
                                <a href="index.php?object=soldier&amp;action=edit&amp;idSoldier={{ soldier.id }}"> -
                                    Modifier </a>
                                <a href="index.php?object=soldier&amp;action=delete&amp;idSoldier={{ soldier.id }}">-
                                    Supprimer</a>
                                <a class="btn btn-xs btn-danger delete-btn pull-right" aria-label="Left Align"
                                   data-id="{{ soldier.id }}"
                                   href="index.php?object=soldier&amp;action=delete&amp;idSoldier={{ soldier.id }}">
                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
    <div><a href="index.php?object=soldier&amp;action=edit">Enregistrer un nouveau militaire</a></div>
{% endblock %}

{% block javascript %}
    <script src="assets/js/cleanNode.js"></script>
    <script src="assets/js/ajaxDeleteSoldier.js"></script>
    <script src="assets/js/ajaxSoldiersList.js"></script>
{% endblock %}