<!-- Modal -->
<div class="modal fade" id="sign-in-modal" tabindex="-1" role="dialog"
     aria-labelledby="sign-in-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="sign-in-modal">Authentification</h4>
            </div>
            {% if not is_connected() %}
                <div class="modal-body">
                    <form class="form-horizontal" action="{{ request_uri() }}" method="post">
                        <div class="form-group">
                            <label for="auth_login" class="col-sm-2 control-label">Login</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="auth_login" placeholder="Login"
                                       name="auth_login" value="" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="auth_password" class="col-sm-2 control-label">Mot de passe</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="auth_password"
                                       placeholder="Mot de passe" name="auth_password" value="" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Se connecter</button>
                            </div>
                        </div>
                    </form>
                </div>
            {% else %}
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Login</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">{{ global.session.login }}</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Statut</label>
                        <div class="col-sm-10">
                            <p class="form-control-static">
                                {% if global.session.status == 'admin' %}
                                    Admin
                                {% elseif global.session.status == 'secretary' %}
                                    Secrétaire
                                {% elseif global.session.status == 'soldier' %}
                                    Militaire
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-1 col-sm-10">
                            <a href="index.php?action=logOut" class="btn btn-default">Se déconnecter</a>
                        </div>
                    </div>
                </form>
            {% endif %}
        </div>
    </div>
</div>